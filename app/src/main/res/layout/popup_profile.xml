<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:background="@drawable/shape_popup">

        <LinearLayout
            android:id="@+id/linearLayoutInformation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="15sp"
                android:layout_gravity="center"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/zeno_artwork"
                android:background="@drawable/shape_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="7dp">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zen-o-Sama"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="zen.dragonball@toei.com"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayoutSignOut"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cerrar SesiÃ³n"
                android:drawablePadding="5sp"
                android:background="@drawable/shape_rectangle">

            </Button>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>